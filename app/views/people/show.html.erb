<p id="notice"><%= notice %></p>
<%= image_tag(@person.get_top_image.preview.url) if @person.images.count > 0 %>
<p>
  <strong>Firstname:</strong>
  <%= @person.firstname %>
</p>
<% if @person.middlenames != nil %>
<p>
  <strong>Middlenames:</strong>
  <%= @person.middlenames %>
</p>
<% end %>
<p>
  <strong>Lastname:</strong>
  <%= @person.lastname %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @person.dob %>
</p>
<% if @person.died %>
<p>
  <strong>Died:</strong>
  <%= @person.died %>
</p>

<p>
  <strong>Age:</strong>
  <%= @person.age %>
</p>

<% end %>
<% if @person.charity %>
<p>
  <strong>Charity:</strong>
  <%= @person.charity.name unless !@person.charity %>
</p>
<% end %>

<!-- Start Memory Post -->
<h2>Memories of <%= @person.fullname %>  </h2>
<div class="postmemory">
<h3>Share your memories of <%= @person.fullname %></h3>
<% if current_user %>
  Title: <input id="mem_title"></input>
  Story: <textarea id="mem_story"></textarea>

  <button id="mem_submit">Go</button>

  <script>
   $('#mem_submit').click(function() {
  var title = $('#mem_title').val();
  var story = $('#mem_story').val();
  var userid = <%= current_user.id %>;
  var reciever_type = "Person";
  var reciever_id = <%= @person.id %>;

  postMemory(title, story, userid, reciever_type, reciever_id);
 })
</script>
  <%= render partial: 'images/form' %>
<% else %>
  You must be logged in to post
<% end %>
</div>
<!-- Start Memory Feed -->
<h3>Other users' memories</h3>
<div id='other_peoples_memories'>    
  <% if @person.memories.count > 0 %>
    <%= render partial: 'layouts/memory', collection: @person.memories.order(ranking: :desc), locals: {frompage: "personpage"} %>
  <% end %>
</div>

<% if @person.images.count > 0 %>
<div class="images">
  <h2>Images of <%= @person.fullname %></h2>
  <%= render partial: 'layouts/thumbnails'%>
</div>
<% end %>
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>