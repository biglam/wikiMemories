	<table id='editmemstable' class="table table-striped">
		<tr>
			<th>Memory Id</th>
			<th>Title</th>
			<th>Story</th>
			<th>Ranking</th>
			<th>Remove</th>
		</tr>
	<% @place.memories.each do |memory| %>
	<tr id='mem_<%= memory.id %>'> 
		<td><%= memory.id %></td>
		<td><%= memory.title %></td>
		<td><%= memory.story %></td>
		<td><%= memory.ranking %></td>
		<td><%= link_to("Remove", remove_item_memories_path(memory: memory.id, place: @place.id), remote: true, class: "btn btn-danger", :confirm => "Are you sure?") %></td>
	</tr>
	<% end %>
</table>


