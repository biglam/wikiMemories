<h3>Share a link</h3>
<%#= form_for(Link.new, remote: true) do |f| %>
<%= form_tag "/#{model}/#{id}/add_link", :method => :post, :format => :json, id: "new_link", :remote => true do  %>
<%=  %>
  <div class="field">
    <%= label :title, "title" %><br>
    <%= text_field_tag :title %>
  </div>
  <div class="field">
    <%= label :address, "URL:" %><br />
    <%= text_field_tag :address %>
  </div>
  <div class="field">
    <%= label :linktype_id, "linktype" %><br>
    <%#= collection_select_tag :linktype_id, Linktype.all.order(:linktype),:id,:linktype, :selected => params['linktype_id'] %>
    <%= select_tag 'linktype_id', options_for_select(Linktype.all.collect{ |linktype| [linktype.linktype, linktype.id] }) %>
  </div>
  <%= hidden_field :user_id, :value => current_user.id %>
  <%#= hidden_field :person_id, :value => @person.id %>

  <%= submit_tag 'Add Link', class: 'btn btn-primary' %>
<% end %>

