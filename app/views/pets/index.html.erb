<p id="notice"><%= notice %></p>

<h1>Listing Pets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Died</th>
      <th colspan="3"><%= link_to('New', new_pet_path, class: "btn btn-info") %></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.dob %></td>
        <td><%= pet.died %></td>
        <td><%= link_to 'Show', pet, class: "btn btn-info"%></td>
        <td><%#= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } if current_user && current_user.role == "owner" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <%= will_paginate @pets %>
<br>

