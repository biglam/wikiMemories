<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>About:</strong>
  <%= @group.about %>
</p>

<p>
	<strong>Associations:</strong>
</p>

<table class="table" id='grouplist'>
	<tr>
		<th>Name</th>
		<th>Type</th>
		<th>Options</th>
	</tr>
<% @group.group_items.each do |item| %>
<tr id='itm<%=item.id%>'>
	<td><%= item.item_name %></td>
	<td><%= item.groupable_type %></td>
	<td><%= link_to 'Show', item.groupable%> <%= link_to('Delete', remove_item_group_path(:item => item.id), method: :put, remote: true)%></td>
</tr>
<% end %>
</table>

<%= link_to 'Edit', edit_group_path(@group) %> |
