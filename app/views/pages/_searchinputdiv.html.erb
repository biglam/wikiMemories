<div class="frontpagesearch">
<!-- people -->
  <h2>Search...</h2>
  <div id='peoplesearchdiv'>
  <%= form_tag people_path, :method => :get, :id => 'peoplesearchform', :remote => true do %>
    <%= text_field_tag :search, params[:search], :id => 'peopleinput', :placeholder => "Search People" %>
    <%= submit_tag 'Go' %>
    <% end %>
    <div id='peopleresultsdiv'></div>
  </div> 

  <div id='placessearchdiv'>
  <%= form_tag places_path, :method => :get, :id => 'placessearchform', :remote => true do %>
