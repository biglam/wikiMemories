    <%= submit_tag 'Go' %>
    <% end %>
    <div id='petsresultsdiv'></div>
  </div> 

  <div id='occasionssearchdiv'>
  <%= form_tag occasions_path, :method => :get, :id => 'occasionssearchform', :remote => true do %>
    <%= text_field_tag :search, params[:search], :id => 'occasionsinput', :placeholder => "Search Occasions" %>
    <%= submit_tag 'Go' %>
    <% end %>
    <div id='occasionsresultsdiv'></div>
  </div> 

</div>