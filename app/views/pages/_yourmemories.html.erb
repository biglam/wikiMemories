<h2>Your Memories</h2>


<table class="table table-condensed">
<% @yourmems.each do |memory| %>
  <tr>
    <th>Title</th>
    <th><%= link_to memory.title, memory %></th>
  </tr>
  <tr>
    <td>Rank: <%= memory.ranking %></td>
    <td><%= memory.story %></td>
  </tr>
  <tr>
    <td></td>
    <td>Written by <%= link_to(memory.user.username, user_path(memory.user.id)) %></td>
  </tr>
<% end %>

</table>

<%= link_to("See all", user_path(current_user)) if user_signed_in? %>